<Window x:Class="Demodem.Views.EditProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demodem.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Окно редактирования товара" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Фотография:" />
            <Image x:Name="imgPhoto" />
            <Button Margin="10" x:Name="btnAddImg" Content="Изменить фото" Click="btnAddImg_Click" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Id товара:"/>
            <TextBox Text="{Binding SelectedProduct.Id}" Name="tbId"/>
            
            <TextBlock Text="Акртикул:"/>
            <TextBox Text="{Binding SelectedProduct.Article}" Name="tbArticle"/>
            
            <TextBlock Text="Описание:" />
            <TextBox TextWrapping="Wrap" Height="50"
                     Name="tbDesc" Text="{Binding SelectedProduct.Description}"/>
            
            
            <TextBlock Text="Цена:"/>
            <TextBox x:Name="tbPrice" Text="{Binding SelectedProduct.Price}"/>
                        
            <TextBlock Text="Количество на складе:"/>
            <TextBox x:Name="tbCountOnStorage" Text="{Binding SelectedProduct.CountOnStorage}"/>
            
            <TextBlock Text="Скидка:"/>
            <TextBox x:Name="tbDisc" Text="{Binding SelectedProduct.Discount}"/>

            <TextBlock Text="Единица измерения:"/>
            <ComboBox SelectedValue="{Binding SelectedProduct.FKUnit}"
                      Name="cbUnit" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            
            <TextBlock Text="Имя товара:" />
            <ComboBox Name="cbName" SelectedValue="{Binding SelectedProduct.FKProductName}"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>
            
            <TextBlock Text="Поставщик:"/>
            <ComboBox Name="cbSupplier" SelectedValue="{Binding SelectedProduct.FKSupplier}"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>
            
            <TextBlock Text="Производитель:" />
            <ComboBox Name="cbManuf" SelectedValue="{Binding SelectedProduct.FkManufacturer}"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>
            
            <TextBlock Text="Категория товара" />
            <ComboBox Name="cbCategory" SelectedValue="{Binding SelectedProduct.FkProductCategory}"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <StackPanel Orientation="Horizontal">
                <Button Height="25" Margin="5" Content="Сохранить изменения" Name="btnSave" Click="btnSave_Click"/>
                <Button Margin="5" Content="Отменить изменения" Name="btnExit" Click="btnExit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
