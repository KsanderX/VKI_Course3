<Window x:Class="WpfApp12.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="Добавление продукта" Height="1000" Width="800">
    <Grid>
        <StackPanel Width="300">
            <TextBlock Text="Добавление продукта" FontSize="24"/>
            <TextBlock Text="Фото:" FontSize="18"/>
            <Image MaxHeight="200" MaxWidth="300" x:Name="BoxImage"/>
            <Button Height="30" Click="btnLoadPhoto" Content="Выбрать фото"/>
            <TextBlock Text="Артикул:" FontSize="18"/>
            <TextBox FontSize="18" Height="30" x:Name="tbArticle"/>
            <TextBlock Text="Описание:" FontSize="18"/>
            <TextBox FontSize="18" Height="30" x:Name="tbDescription"/>
            <TextBlock Text="Цена:" FontSize="18"/>
            <TextBox FontSize="18" Height="30" x:Name="tbPrice"/>
            <TextBlock Text="Количество:" FontSize="18"/>
            <TextBox FontSize="18" Height="30" x:Name="tbQuantity"/>
            <TextBlock Text="Скидка:" FontSize="18"/>
            <TextBox FontSize="18" Height="30" x:Name="tbDiscount"/>
            <TextBlock Text="Имя продукта:" FontSize="18"/>
            <ComboBox x:Name="cbProductNames" Height="30" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedIndex="0"/>
            <TextBlock Text="Категория продукта:" FontSize="18"/>
            <ComboBox x:Name="cbCategory" Height="30" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedIndex="0"/>
            <TextBlock Text="Производитель:" FontSize="18"/>
            <ComboBox x:Name="cbSuppliers" Height="30" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedIndex="0"/>
            <TextBlock Text="Поставщик:" FontSize="18"/>
            <ComboBox x:Name="cbProviders" Height="30" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedIndex="0"/>
            <TextBlock Text="Единица измерения:" FontSize="18"/>
            <ComboBox x:Name="cbUnits" Height="30" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedIndex="0"/>
            <Button Height="30" Content="Создать продукт" Click="btnAddProduct"/>
            <Button Height="30" Content="Назад" Click="btnOpenMainView"/>
        </StackPanel>
    </Grid>
</Window>
