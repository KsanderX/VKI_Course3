<UserControl x:Class="Demodemo.Controllers.ProductItemController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demodemo.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="1000">
    <Border BorderBrush="Black" BorderThickness="2" Padding="10" Margin="5">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

            <Border BorderBrush="Black" BorderThickness="2">
                <StackPanel Grid.Column="0" >
                    <Image x:Name="boxImage" />
                </StackPanel>
            </Border>

            <Border  Grid.Column="1"  BorderBrush="Black" BorderThickness="1" Margin="5 0 5 0">
                <StackPanel Grid.Column="1" Margin="5 0 0 0" >
                    <TextBlock FontSize="20" FontWeight="Black">
                <Run Text="{Binding FkProductCategoryNavigation.Name}"/>
                <Run Text=" | "/>
                <Run Text="{Binding FkProductNameNavigation.Name}"/>
                    </TextBlock>
                    <TextBlock>
                <Run Text="Описание товара:"/>
                <Run Text="{Binding Description}"/>
                    </TextBlock>
                    <TextBlock>
                <Run Text="Производитель:"/>
                <Run Text="{Binding FkSupplierNavigation.Name}"/>
                    </TextBlock>
                    <TextBlock>
                <Run Text="Поставщик:"/>
                <Run Text="{Binding FkManufacturerNavigation.Name}"/>
                    </TextBlock>
                    <TextBlock>
                <Run Text="Цена:"/>
                <Run Name="runPrice" Text="{Binding Price}"/>
                <Run Name="runNewPrice"/>
                    </TextBlock>
                    <TextBlock>
                <Run Text="Единица измерения:"/>
                <Run Text="{Binding FkUnitNavigation.Name}"/>
                    </TextBlock>
                    <TextBlock>
                <Run Text="Количество на складе:"/>
                <Run Name="tbCountOnStorage" Text="{Binding CountOnStorage}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
            <Border Grid.Column="2"  BorderBrush="Black" x:Name="BorderDiscount" BorderThickness="2" >
                <TextBlock  FontSize="24" VerticalAlignment="Center"	 HorizontalAlignment="Center">
                  <Run Text="{Binding Discount}"/>
                  <Run Text="%"/>   
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</UserControl>
