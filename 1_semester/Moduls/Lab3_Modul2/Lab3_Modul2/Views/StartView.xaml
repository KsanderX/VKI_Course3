<Window x:Class="Lab3_Modul2.Views.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3_Modul2.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Товары" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock DockPanel.Dock="Right" FontSize="23">
                <Run Text="Добро пожаловать:"/>
                <Run Name="RunNameUser"/>
            </TextBlock>
                <Button x:Name="ButtonExit" Content="Выйти" Width="100" Margin="5" Click="ButtonExit_Click"/>
            <StackPanel >
            </StackPanel>
        </DockPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                    Visibility="Collapsed" Name="panelFind">
            <TextBox x:Name="BoxFind" Width="120"/>
            <Label Content="Поиск" />
            <RadioButton Content="По возрастанию" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <RadioButton Content="По убыванию" VerticalAlignment="Center" Margin="5,0,0,0"/>

            <ComboBox Margin="5 0 0 0" Width="120" SelectedIndex="0">
                <ComboBoxItem>
                    Все Поставщики
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
        
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock VerticalAlignment="Center" DockPanel.Dock="Right" FontSize="23">
                 <Run Text="Роль:"/>
                 <Run Name="RunRoleUser"/>
            </TextBlock>
          
            <StackPanel Orientation="Horizontal" Name="panelCRUD"
                        Visibility="Collapsed">
                <Button Margin="10" Content="Добавить товар"
                        Width="100" Height="30"/>
                <Button Margin="10" Content="Удалить товар"
                        Width="100" Height="30"/>
               
            </StackPanel>
            <StackPanel Orientation="Horizontal" Name="panelRequst"
                        Visibility="Collapsed">
                <Button Margin="10" Name="btnOpenRequest" Content="Посмотреть заказы"
                        Width="110" Height="30" Click="btnOpenRequest_Click"/>
            </StackPanel>
            <StackPanel>
                
            </StackPanel>
        </DockPanel>

        <StackPanel Margin="5">
            <ListBox Name="BoxUsers" MinHeight="300"/>
        </StackPanel>
    </DockPanel>
</Window>
