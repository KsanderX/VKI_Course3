<UserControl x:Class="Demo_Shoes.Controllers.OrderItemController"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Shoes.Controllers"
        mc:Ignorable="d" d:DesignWidth="800" Height="167">
    <Border x:Name="MainBorder" BorderBrush="Black" BorderThickness="2">
        <Grid  Margin=" 10 5 5 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>



            <!--левый компонент-->
            <Border BorderBrush="Black" BorderThickness="2"
                    Margin="5 5 10 5">
                <StackPanel Grid.Column="0" Margin="5"
                            MinWidth="00">
                    <TextBlock FontSize="25 " FontWeight="Black">
                        <Run Text="{Binding OrderNumber}"/>
                    </TextBlock>

                    <TextBlock FontSize="20">
                         <Run Text="{Binding FkOrderStatusNavigation.Name}"/>
                    </TextBlock>

                    <TextBlock FontSize="20">
	                     <Run Text="{Binding FkPickUpPointNavigation.Addreses}"/>
                    </TextBlock>

                    <TextBlock FontSize="20">
	                     <Run Text="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                    </TextBlock>


                </StackPanel>
            </Border>

            <!--правый компонент-->
            <Border Grid.Column="2" BorderBrush="Black" 
                    Margin="5" x:Name="BorderDiscount" BorderThickness="2" >
                <TextBlock   FontSize="24"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center">          
                 <Run Text="{Binding DeliveryDay, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                </TextBlock>

            </Border>
        </Grid>
    </Border>
</UserControl>
