<UserControl x:Class="WpfApp12.ProductItemController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp12"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1400">
    <Border BorderBrush="Black" BorderThickness="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="900"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                <StackPanel Grid.Column="0">
                    <Image x:Name="boxImage" MaxHeight="200" MaxWidth="300"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1"  Grid.Column="1" Margin="10">
                <StackPanel>
                    <TextBlock FontWeight="Bold">
                    <Run Text="{Binding ProductCategory.Name}"/>
                    <Run Text="|" />
                    <Run Text="{Binding ProductName.Name}"/>
                    </TextBlock>
                    <TextBlock>
                   <Run Text="Описание товара"/>
                   <Run Text="{Binding Description}"/>
                    </TextBlock>
                    <TextBlock>
                    <Run Text="Поставщик"/>
                    <Run Text="{Binding Provider.Name}"/>
                    </TextBlock>
                    <TextBlock>
                  <Run Text="Производитель"/>
                  <Run Text="{Binding Supplier.Name}"/>
                    </TextBlock>
                    <TextBlock>
   <Run Text="Цена"/>
   <Run Text="{Binding Price}" x:Name="RunPrice"/>
                        <Run x:Name="RunNewPrice"/>
                    </TextBlock>

                    <TextBlock>
   <Run Text="Единица измерения"/>
   <Run Text="{Binding Unit.Name}"/>
                    </TextBlock>

                    <TextBlock x:Name="tbQuantity">
   <Run Text="Количество на складе"/>
   <Run Text="{Binding Quantity}" />
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="10">
                <Grid x:Name="gridDiscount">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run Text="{Binding Discount}"/>
                    </TextBlock>
                </Grid>
            </Border>


        </Grid>
    </Border>
</UserControl>
