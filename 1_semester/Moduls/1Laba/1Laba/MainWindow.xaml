<Window x:Class="_1Laba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1Laba"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="440" Width="700">
    <Grid Margin="10">        
        <ScrollViewer>
            <StackPanel >
                <ListBox x:Name="UsersListBox" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Height="112" Width="560">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="350*"/>
                                        <ColumnDefinition Width="160*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20*"/>
                                        <RowDefinition Height="65*"/>
                                        <RowDefinition Height="20*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Border BorderBrush="Black" BorderThickness="1"
                                            Grid.Column ="0" Grid.RowSpan="3"/>
                                    
                                    <Image Grid.Column="0" Grid.RowSpan="3" 
                                           Source="{Binding ImagePath}"/>

                                    <TextBlock Grid.Column="1" Grid.Row="0" Margin="5 0 0 0 ">
                                        <Run Text="Имя пользователя:"/>
                                        <Run Text="{Binding UserName}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Column="2" Grid.Row="0" Margin="5 0 0 0 ">
                                        <Run Text="Группа крови:"/>                                        
                                        <Run Text="{Binding BloodGroup}"/>
                                    </TextBlock>

                                    <ScrollViewer  Grid.Column="1" Grid.Row="1"
                                                   Grid.ColumnSpan="2">
                                        <TextBlock Margin="5 0 0 0 " HorizontalAlignment="Left" TextWrapping="Wrap">                                          
                                        <Run Text="Описание профиля:"/>
                                        <Run Text="{Binding ProfileDescription}"/>
                                        </TextBlock>
                                    </ScrollViewer>

                                    <TextBlock Margin="5 0 0 0 " Grid.Column="1" Grid.Row="2">
                                         <Run Text="Дата создания:"/>
                                        <Run Text="{Binding CreationDate}"/>
                                    </TextBlock>

                                    <TextBlock Margin="5 0 0 0 " Grid.Column="2" Grid.Row="2" TextWrapping="Wrap">
                                         <Run Text="Знак зодиака:"/>
                                        <Run Text="{Binding ZodiacSign}"/>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                 </ListBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
