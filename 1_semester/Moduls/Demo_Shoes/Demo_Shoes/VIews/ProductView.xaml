<Window x:Class="Demo_Shoes.ProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Shoes" xmlns:controllers="clr-namespace:Demo_Shoes.Controllers"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Список товаров" Height="550" Width="1400">
     <DockPanel>
        <DockPanel DockPanel.Dock="Top" >
            <TextBlock DockPanel.Dock="Right" FontSize="25">
                <Run Text="Добро пожаловать:"/>
                <Run Name="runUserName" />
            </TextBlock>
            <Button Content="Выйти" FontSize="25" Width="100" Margin="10" x:Name="btnExit" Click="btnExit_Click"/>
            <StackPanel>
            </StackPanel>
        </DockPanel>

        <StackPanel Name="panelFind" DockPanel.Dock="Top" 
            Orientation="Horizontal" Margin="50 0" Visibility="Collapsed">

            <Label Content="Поиск:" VerticalAlignment="Center"/>
            <TextBox x:Name="BoxFind" Width="200" Margin="5,0,10,0" 
             VerticalAlignment="Center" />

            <Label Content="Сортировка (склад):" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton x:Name="RbSortAsc" Content="По возрастанию" GroupName="Sort" Margin="5,0" 
                    />
                <RadioButton x:Name="RbSortDesc" Content="По убыванию" GroupName="Sort" Margin="5,0" 
                   />
            </StackPanel>

            <Label Content="Поставщик:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="CbSupplier" Width="150" Margin="5,0,0,0" 
              VerticalAlignment="Center"
              DisplayMemberPath="Name" >
            </ComboBox>
        </StackPanel>

        <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <StackPanel x:Name="panelCRUD" Visibility="Collapsed"
              Orientation="Horizontal" Cursor="" HorizontalAlignment="Right">
                <Button x:Name="btnAddProduct" FontSize="25" Margin="10 10" Width="200" Content="Добавить товар" Click="btnAddProduct_Click"/>
                <Button x:Name="btnDeleteProduct" FontSize="25" Margin="10 10" Width="200" Content="Удалить товар" Cursor="" Click="btnDeleteProduct_Click"/>
            </StackPanel>
            <StackPanel x:Name="panelOrder" Visibility="Collapsed"
                Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnOpenOrder" FontSize="25" Margin="10 10" Width="200" Content="Заказы" Click="btnOpenOrder_Click"/>
            </StackPanel>
        </DockPanel>
         
        <DockPanel Margin="50 0 20 50">             
            <ScrollViewer Height="400">
                <ListBox x:Name="BoxProduct" HorizontalContentAlignment="Stretch" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </DockPanel>
    </DockPanel>
</Window>
