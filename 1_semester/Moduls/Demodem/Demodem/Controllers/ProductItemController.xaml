<UserControl x:Class="Demodem.Controllers.ProductItemController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demodem.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="1100">
    <Border BorderThickness="1" BorderBrush="Black">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

            <Border Margin="5" BorderThickness="2" BorderBrush="Black">
                <StackPanel Grid.Column="0">                    
                    <Image x:Name="imgProduct" />
                </StackPanel>
            </Border>

            <Border Margin="5 5 5 5" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <StackPanel Grid.Column="1">
                    <TextBlock FontWeight="Black" FontSize="18">
                        <Run Text="{Binding FkProductCategoryNavigation.Name}" />
                        <Run Text=" | " />
                        <Run Text="{Binding FkProductNameNavigation.Name}" />
                    </TextBlock>
                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Описание товара:" />
                        <Run Text="{Binding Description}" />
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Производитель: " />
                        <Run Text="{Binding FkManufacturerNavigation.Name}" />
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Поставщик:"/>
                        <Run Text="{Binding FkSupplierNavigation.Name}" />
                    </TextBlock>
                    
                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Цена:" />
                        <Run Text="{Binding Price}" Name="runPrice" />
                        <Run Name="runNewPrice" />
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Единица измерения:" />
                        <Run Text="{Binding FkUnitNavigation}" />
                    </TextBlock>

                    <TextBlock Margin="0 5 0 0">
                        <Run Text="Количетсво на складе:" />
                        <Run Text="{Binding CountOnStorage}" Name="runCountOnStorage" />
                    </TextBlock>
                    
                </StackPanel>
            </Border>

            <Border  x:Name="stDisc"  Margin="5 5 5 5" Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontSize="24" Text="{Binding Discount}"  x:Name="tbDisc" HorizontalAlignment="Stretch" />
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>
