<Window x:Class="MyAppToday.View.OperatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAppToday.View"
        mc:Ignorable="d"
        Title="OperatorView" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Width="300" Height="400">
            <Label Content="Создание заявки" HorizontalContentAlignment="Center" FontSize="24"/>
            <Label Content="Описание проблемы со слов клиента:" FontSize="16"/>
            <TextBox Height="30" FontSize="18"  Text="{Binding ProblemDescription}"/>
            <Label Content="Клиент:" FontSize="16"/>
            <ComboBox Height="30" FontSize="16" DisplayMemberPath="Login" SelectedValuePath="Id" SelectedItem="{Binding SelectedClient}" ItemsSource="{Binding Clients}"/>
            <Label Content="Оборудование:" FontSize="16"/>
            <ComboBox Height="30" FontSize="16" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedItem="{Binding SelectedEquipment}" ItemsSource="{Binding Equipment}"/>
            <Button Height="30" Margin="0,10,0,0" Content="Создать заявку" Click="btnCreateRequest"/>
            <Button Height="30" Margin="0,10,0,0" Content="Посмотреть заявки" Click="btnOpenRequestView"/>
            <Button Height="30" Margin="0,10,0,0" Content="Назначить мастера на заявку" Click="btnOpenAssignMastersView"/>
            <Button Height="30" Margin="0,10,0,0" Content="Выйти из приложения" Click="btnOpenAuthorizationView"/>
        </StackPanel>
    </Grid>
</Window>
