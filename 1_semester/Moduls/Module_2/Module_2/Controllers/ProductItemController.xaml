<UserControl x:Class="Module_2.Controllers.ProductItemController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Module_2.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="1400">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid  Margin=" 10 5 5 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <!--левый компонент-->
            <StackPanel Grid.Column="0">
                <Image Source="{Binding ImagePath}"
							 MaxHeight="200" MaxWidth="300"/>
            </StackPanel>

            <!--центральный компонент-->
            <StackPanel Grid.Column="1" MinWidth="900">
                <TextBlock FontSize="25 " FontWeight="Black">
						  <Run Text="{Binding Сategory}"/>
						  <Run Text=" | "/>
						  <Run Text="{Binding Name}"/>
                </TextBlock>

                <TextBlock FontSize="20">
						 <Run Text="Описание товара:"/>
						 <Run Text="{Binding Description}"/>
                </TextBlock>

                <TextBlock FontSize="20">
							 <Run Text="Производитель:"/>
							 <Run Text="{Binding Manufacturer}"/>
                </TextBlock>

                <TextBlock FontSize="20">
							 <Run Text="Поставщик:"/>
							 <Run Text="{Binding Supplier}"/>
                </TextBlock>

                <TextBlock FontSize="20">
							<Run Text="Цена:"/>
							<Run  Name="RunPrice" Text="{Binding Price}"/>
							<Run  Name="RunNewPrice"/>
							<Run />
                </TextBlock>

                <TextBlock FontSize="20">
							 <Run Text="Единица измерения:"/>
							 <Run Text="{Binding Unit}"/>
                </TextBlock>

                <TextBlock FontSize="20" Name="BoxCount">
							 <Run Text="Количество на складе:"/>
							 <Run Text="{Binding Count}"/>
                </TextBlock>
            </StackPanel>

            <!--правый компонент-->
            <Border Grid.Column="2" BorderBrush="Black" x:Name="BorderDiscount" BorderThickness="2" >
                <TextBlock Text="{Binding Discount}"  FontSize="20"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
