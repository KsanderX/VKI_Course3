<UserControl x:Class="Lab2_Module2.Controllers.EquipmentItemController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab2_Module2.Controllers"
             mc:Ignorable="d" d:DesignWidth="1400" Height="350">
    <Border BorderBrush="Black" BorderThickness="2" Width="1400" Height="350">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition  Height="71*"/>
                <RowDefinition  Height="265*"/>
            </Grid.RowDefinitions>

            <!--левый элемент-->
            <StackPanel Grid.Column="0" Grid.RowSpan="2">
                <Image Source="{Binding Photo}" MaxHeight="300" Margin="10" MaxWidth="300"/>
            </StackPanel>

            <!--центральный элемент-->
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" MinWidth="700" Grid.RowSpan="2" Height="312">                
            <StackPanel  VerticalAlignment="Top" >
                <TextBlock FontSize="28"  Margin="5 0 0 0">
                    <Run Text="{Binding EquipmentName}"/>
                    <Run Text="-"/>
                    <Run Text="{Binding FkEquipmentTypeNavigation.Name}"/>
                </TextBlock>

                <TextBlock FontSize="20" Margin="5 10 0 0">
                    <Run Text="Производитель:"/>
                    <Run Text="{Binding FkManufacturerNavigation.Name}"/>
                </TextBlock>

                <TextBlock FontSize="20" Margin="5 10 0 0">
                    <Run Text="Поставщик:"/>
                    <Run Text="{Binding FkSupplierNavigation.Name}"/>
                </TextBlock>

                <TextBlock FontSize="20" Margin="5 10 0 0">
                    <Run Text="Единица оборудования:"/>
                    <Run Text="{Binding NumberUnits}"/>
                </TextBlock>

                <TextBlock FontSize="20" Margin="5 10 0 0">
                    <Run Text="Описание оборудования:"/>
                    <Run Text="{Binding Description}"/>
                </TextBlock>
            </StackPanel>
            </Border>

            <!--правый элемент-->
            <StackPanel Grid.Column="2" Grid.Row="0">
                <Border BorderBrush="Black" BorderThickness="2" 
                        Margin="10"  Height="50">
                    <TextBlock FontSize="20">
                        <Run Text="Цена аренды:"/>
                        <Run Text="{Binding Price}"/>
                        <Run Text="(P)"/>
                    </TextBlock>
                </Border>
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="1">
                <Border BorderBrush="Black" BorderThickness="2" 
                        Margin="10" Height="243">
                    <TextBlock FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               x:Name="DiscountTextBlock">
                         <Run Text="{Binding Discount}"/>
                         <Run Text="%"/>
                    </TextBlock>

                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
