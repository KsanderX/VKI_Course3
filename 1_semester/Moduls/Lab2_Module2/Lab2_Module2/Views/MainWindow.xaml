<Window x:Class="Lab2_Module2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_Module2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="700" Width="1545">
    <Grid>
        <Button x:Name="btnExit" Content="Выйти" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10" FontSize="30" Background="White" Click="btnExit_Click"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Text="Список товаров" FontSize="40"/>
        <StackPanel Margin="40" Height="430">
            <ScrollViewer MaxHeight="400" Margin="10">           
                <ListBox x:Name="BoxEquipment"/>
            </ScrollViewer>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="754">            
        <Button x:Name="btnDelete" Content="Удалить товар"
                Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="30" Click="btnDelete_Click"/>
        <Button x:Name="btnAdd" Content="Добавить товар"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10" FontSize="30" Click="btnAdd_Click"/>
        <Button x:Name="btnOpenOrder" Content="Посмотреть заказы" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10" FontSize="30"/>
        </StackPanel>
    </Grid>
</Window>
