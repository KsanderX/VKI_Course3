<Window x:Class="Lab2_Module2.Views.AddProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_Module2.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Добавление товара" Height="540" Width="600">
    <ScrollViewer MaxHeight="540">
        
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="200"/>
            <ColumnDefinition MaxWidth="450"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="30"
                   VerticalAlignment="Top" Text="Добавление товара" Margin="160,-5,-160,0"/>
            <Button Grid.Column="0" Grid.Row="0" Width="100" Height="30" 
                    HorizontalAlignment="Left" Margin="-13,-13,0,18"
                    Name="btnBack" Content="Назад" Click="btnBack_Click" />

            <TextBlock Text="Название товара:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Артикул:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="tbArticle" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Цена (в рублях):" Grid.Row="3" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="tbPrice" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Скидка (в %):" Grid.Row="4" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="tbDiscount" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Кол-во на складе:" Grid.Row="5" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="tbNumberUnits" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Единица аренды (час, дней):" Grid.Row="6" Grid.Column="0"
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="tbRentalUnit" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Тип оборудования:" Grid.Row="7" Grid.Column="0"
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbEquipmentType" Grid.Row="7" Grid.Column="1" Margin="5"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Text="Производитель:" Grid.Row="8" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbManufacturer" Grid.Row="8" Grid.Column="1" Margin="5"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Text="Поставщик:" Grid.Row="9" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbSupplier" Grid.Row="9" Grid.Column="1" Margin="5"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Text="Описание:" Grid.Row="10" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="tbDescription" Grid.Row="10" Grid.Column="1" Margin="5"
                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

        <TextBlock Text="Фото:" Grid.Row="11" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Button x:Name="btSelectPhoto" Content="Выбрать фото..." Grid.Row="11" Grid.Column="1" 
                Margin="5" HorizontalAlignment="Left" Width="150" Click="btSelectPhoto_Click"/>

        <Image x:Name="ImgPhotoPreview" Grid.Row="12" Grid.Column="1" Margin="5" MaxHeight="150" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="13" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btSave" Content="Сохранить" Width="120" Height="30" Margin="5" 
                    Click="btSave_Click"/>
            <Button x:Name="btCancel" Content="Отмена" Width="120" Height="30" Margin="5" 
                    Click="btCancel_Click"/>
        </StackPanel>

    </Grid>
    </ScrollViewer>

</Window>
